name: "screenrecorder"

platforms:
    arm64-ios:
        context:
            frameworks: ["AVFoundation", "ReplayKit", "CoreMedia"]
            linkFlags:  ["-ObjC"]
            libs:       ["c++"]
    x86_64-osx:
        context:
            flags:      ["-std=c++11"]
            libs:       ["c++"]
    x86_64-linux:
        context:
            flags:      ["-std=c++11"]
    x86_64-win32:
        context:
            flags:      ["-std=c++14"]
